---
import { Image } from 'astro:assets';
import logoImg from '../assets/logo.png';

const navItems = [
  { label: 'Null-ID', href: '/null-id' },
  { label: 'About', href: '/about' },
  { label: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-md">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="flex font-serif font-bold items-center">
      <Image
        src={logoImg}
        alt="Urlbound Logo"
        class="h-10 w-auto"
      />
      <span class="ml-2">Urlbound</span>
    </a>
    <nav class="hidden md:flex space-x-6">
      {navItems.map(item => (
        <a href={item.href} class="text-gray-700 hover:text-blue-500 transition duration-150 ease-in-out">
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>